<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    tools:context=".ResultPage">

    <ImageView
        android:id="@+id/rose_image3"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:src="@drawable/rose_image1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YOUR LOVE AT"
        android:textSize="25sp"
        android:textStyle="italic"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/rose_image4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/rose_image3"
        app:layout_constraintRight_toLeftOf="@+id/rose_image4"/>

    <ImageView
        android:id="@+id/rose_image4"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:src="@drawable/rose_image2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/rose1"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:src="@drawable/heart"
        android:layout_marginLeft="2dp"
        app:layout_constraintRight_toLeftOf="@+id/rose2"
        app:layout_constraintTop_toBottomOf="@+id/rose_image3"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/your_nameTxt"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        tools:text="@string/app_name"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center"
        android:maxLines="2"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@+id/rose1"
        app:layout_constraintLeft_toLeftOf="@+id/rose1"
        app:layout_constraintRight_toRightOf="@id/rose1"
        app:layout_constraintBottom_toBottomOf="@id/rose1"/>

    <ImageView
        android:id="@+id/rose2"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:src="@drawable/heart"
        android:layout_marginRight="2dp"
        app:layout_constraintLeft_toRightOf="@id/rose1"
        app:layout_constraintTop_toBottomOf="@+id/rose_image3"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/your_lover_nameTxt"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        tools:text="@string/app_name"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center"
        android:maxLines="2"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@+id/rose2"
        app:layout_constraintLeft_toLeftOf="@+id/rose2"
        app:layout_constraintRight_toRightOf="@id/rose2"
        app:layout_constraintBottom_toBottomOf="@id/rose2"/>


    <ImageView
        android:id="@+id/round"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_round_fiber_manual_record_24"
        app:layout_constraintBottom_toBottomOf="@id/rose1"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="@+id/rose1"
        app:layout_constraintLeft_toLeftOf="@id/rose1"
        app:layout_constraintRight_toRightOf="@id/rose2"/>

    <TextView
        android:id="@+id/per"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="20%"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:maxLines="2"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@+id/round"
        app:layout_constraintLeft_toLeftOf="@+id/round"
        app:layout_constraintRight_toRightOf="@id/round"
        app:layout_constraintBottom_toBottomOf="@id/round"/>

    <ImageView
        android:id="@+id/notes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/notes2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/round" />

    <TextView
        android:id="@+id/msg"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        tools:text="message"
        android:textSize="16sp"
        android:textStyle="italic"
        android:gravity="center"
        android:maxLines="4"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/notes"
        app:layout_constraintLeft_toLeftOf="@+id/notes"
        app:layout_constraintRight_toRightOf="@id/notes"
        app:layout_constraintBottom_toBottomOf="@id/notes"/>

</androidx.constraintlayout.widget.ConstraintLayout>